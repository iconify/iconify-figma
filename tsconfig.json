{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es2017",
		"module": "esnext",
		"declaration": false,
		"sourceMap": false,
		"strict": true,
		"types": ["svelte"],
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error"
	}
}
